root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.{py,pyi}]
indent_style = space
indent_size = 4

[*.{yaml,yml}]
indent_style = space
indent_size = 2

# Don't auto-format Helm templates
[charts/**/*.{yaml,yml}]
indent_style = space
indent_size = 2
trim_trailing_whitespace = false

[*.md]
trim_trailing_whitespace = false

[Makefile]
indent_style = tab
